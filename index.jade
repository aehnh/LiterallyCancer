                height: 100%;
            }

            .fab {
                background: #03A9F4;
                width: 64px;
                height: 64px;
                border-radius: 50%;
                text-align: center;
                color: #FFF;
                box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.5), 3px 3px 3px rgba(0, 0, 0, 0.25);
                position: fixed;
                bottom: calc(1 / 4 * 3 * 64px);
                right: calc(1 / 4 * 3 * 64px);
                font-size: 2.6667em;
                display: inline-block;
                cursor: default;
            }
